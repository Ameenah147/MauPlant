<div data-controller="swipe"></div>
<div class="swiper">
  <!-- Additional required wrapper -->
  <div class = "plant-category-title"><h1> Fruits</h1></div>
  <div class="swiper-wrapper decoration-text">
    <!-- Slides -->
    <% @fruits.each do |fruit| %>
      <div class="swiper-slide ">
        <%= link_to plant_path(fruit) do %>
          <div class="card-plant-single">
            <h3><%= fruit.name %></h3>
            <%= cl_image_tag fruit.photo.key, class:'swiper-images'%>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

